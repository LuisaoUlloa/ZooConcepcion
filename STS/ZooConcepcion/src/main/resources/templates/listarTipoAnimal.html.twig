{% extends 'base.html.twig' %}


{% block titulo  %}
Listado de Tipos de Animales
{% endblock titulo %}

{% block contenido %}
<h1>Listado de Tipos de Animales</h1>

<table>
	<tr>
		<th>Nombre</th>
		<th>Descripcion</th>
	</tr>
	{% for a in tipos %}

	<tr>

		<td>{{ a.getNombre() }}</td>
		<td>{{ a.getDescripcion() }}</td>
		<td><a href="eliminar?id={{ a.getId() }}">Eliminar</a></td>
		<td><a href="editar?id={{ a.getId() }}">Modificar</a></td>

	</tr>

	{% endfor %}
</table>
<h4>
	{{ mensaje }}
</h4>
{% endblock contenido %}
