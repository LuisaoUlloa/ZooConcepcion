{% extends 'base.html.twig' %}

{% block titulo  %}
Agregar Animal
{% endblock titulo %}

{% block contenido %}
<h1>Filtro Animales por Tipo</h1>
<form action="buscarTipo" method="POST">
	<table>
		<tr>
			<td><label>Tipo de Animal </label></td>
			<td><select name="cboTipo" id="cboTipo" required>
					<option value="">Seleccionar:</option>
					{% for tipo in tipos %}

					<option value="{{ tipo.getId() }}">{{ tipo.getNombre() }}</option>

					{% endfor %}

			</select></td>
			<td><td><input type="submit" value="Buscar" name="btnBuscar"
				id="btnBuscar"></td></td>
		</tr>
			
	</table>
</form>
{% if animales != null %}
<table>
	<tr>
		<th>Nombre</th>
		<th>Peso</th>
		<th>Tipo</th>
		<th>Genero</th>
		<th>Fecha de Nacimiento</th>
		<th>Sector</th>
		<th>Fecha de Ingreso</th>
		<th>Fecha de Defuncion</th>
		

	</tr>
	
	{% for a in animales %}

	<tr>

		<td>{{ a.getNombre() }}</td>
		<td>{{ a.getPeso() }}</td>
		<td>{{ a.getTipo().getNombre() }}</td>
		{% if a.getGenero() == 0 %}
		<td>Hembra</td>
		{% else %}
		<td>Macho</td>
		{% endif %}
		<td>{{ a.getFechaNacimiento() | date('dd-MM-yyyy') }}</td>
		<td>{{ a.getSector().getNombre() }}</td>
		<td>{{ a.getFechaIngreso() | date('dd-MM-yyyy') }}</td>
		<td>{{ a.getFechaDefuncion() | date('dd-MM-yyyy') }}</td>


	</tr>

	{% endfor %}

</table>
	{%  endif %}
<h3>
	{{ mensaje }}
</h3>

{% endblock contenido %}