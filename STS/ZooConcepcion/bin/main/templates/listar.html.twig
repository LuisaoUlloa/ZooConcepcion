{% extends 'base.html.twig' %}


{% block titulo  %}
Listado de Animales
{% endblock titulo %}

{% block contenido %}
<h1>Listado de Animales</h1>

<table>
	<tr>
		<th>Nombre</th>
		<th>Peso</th>
		<th>Tipo</th>
		<th>Genero</th>
		<th>Fecha de Nacimiento</th>
		<th>Sector</th>
		<th>Fecha de Ingreso</th>
		<th>Fecha de Defuncion</th>
		<th>Opciones</th>

	</tr>
	{% for a in animales %}

	<tr>

		<td>{{ a.getNombre() }}</td>
		<td>{{ a.getPeso() }}</td>
		<td>{{ a.getTipo().getNombre() }}</td>
		{% if a.getGenero() == 0 %}
		<td>Hembra</td>
		{% else %}
		<td>Macho</td>
		{% endif %}
		<td>{{ a.getFechaNacimiento() | date('dd-MM-yyyy') }}</td>
		<td>{{ a.getSector().getNombre() }}</td>
		<td>{{ a.getFechaIngreso() | date('dd-MM-yyyy') }}</td>
		<td>{{ a.getFechaDefuncion() | date('dd-MM-yyyy') }}</td>
		<td><a href="eliminar?id={{ a.getId() }}">Eliminar</a></td>
		<td><a href="editar?id={{ a.getId() }}">Modificar</a></td>

	</tr>

	{% endfor %}
</table>
<h4>
	{{ mensaje }}
</h4>
{% endblock contenido %}
